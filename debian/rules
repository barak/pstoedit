#!/usr/bin/make -f
# Made with the aid of dh_make, by Craig Small
# Sample debian/rules that uses debhelper. GNU copyright 1997 by Joey Hess.
# Some lines taken from debmake, by Cristoph Lameter.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

SHELL+= -e

MAKEOPTS=prefix=/usr \
	MANDIR=/usr/share/man/man1 \
 CCC="g++ -DBUGGYGPP -D__STRICT_ANSI__ -pedantic -Wall  -Wwrite-strings -Wcast-qual -Wpointer-arith -Wstrict-prototypes -O2 -g" \
 LDFLAGS="-g"


build: build-stamp
build-stamp:
	dh_testdir

	# Add here commands to compile the package.
	$(MAKE) -C src $(MAKEOPTS)
	$(MAKE) -C doc pstoedit.1
	chmod 644 examples/*.ps

	touch build-stamp


clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp

	# Add here commands to clean up after the build process.
	-$(MAKE) -C src clean
	-$(MAKE) -C doc clean
	-cd examples ; rm -f *.ps.* *.man.ps*

	dh_clean


# Build architecture-independent files here.
binary-indep: build
# We have nothing to do by default.


# Build architecture-dependent files here.
binary-arch: build
#	dh_testversion
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	# Add here commands to install the files into debian/tmp
	#$(MAKE) -C src $(MAKEOPTS) install
	install -p -m 0755 src/pstoedit debian/tmp/usr/bin/
	install -p -m 0644 misc/mpost.fmp debian/tmp/etc/pstoedit/fontmap.mpost
	dos2unix -p debian/tmp/etc/pstoedit/fontmap.mpost

	dh_installdocs
	dh_installexamples examples/*.ps
	dh_installmenu
#	dh_installinit
	dh_installcron
	dh_installmanpages
#	dh_undocumented
	dh_installchangelogs changelog.htm
	gzip -9 debian/tmp/usr/share/doc/pstoedit/changelog.html
	dh_strip
	dh_compress
	dh_fixperms
	dh_suidregister
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
#	dh_makeshlibs
	dh_md5sums
	dh_builddeb


source diff:                                                                  
	@echo >&2 'source and diff are obsolete - use dpkg-source -b'; false


binary: binary-indep binary-arch


.PHONY: build clean binary-indep binary-arch binary
