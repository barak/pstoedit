#!/usr/bin/make -f
#   -*- mode: makefile; -*-
# Sample debian.rules file - for GNU Hello (1.3).
# Copyright 1994,1995 by Ian Jackson.
# I hereby give you perpetual unlimited permission to copy,
# modify and relicense this file, provided that you do not remove
# my name from the file itself.  (I assert my moral right of
# paternity under the Copyright, Designs and Patents Act 1988.)

SHELL+= -e

package=pstoedit
p=$(package)

MAKEOPTS=BINDIR=../debian/tmp/usr/bin \
 LIBDIR=../debian/tmp/usr/lib/pstoedit\
 MANDIR=../debian/tmp/usr/man

# The next section may have to be extensively modified

build:
	make -C src $(MAKEOPTS)

clean:
	$(MAKE) -C src -i clean
	-cd examples ; rm -f *.ps.* *.man.ps*
	rm -f debian/files debian/substvars
	rm -rf debian/tmp

binary-indep:   checkroot build
	$(checkdir)
# There are no architecture-independent files to be uploaded
# generated by this package.  If there were any they would be
# made here.

binary-arch:    checkroot build
	-rm -rf debian/tmp
	install -m 0755 -d debian/tmp/usr/doc/$(package)\
	           debian/tmp/usr/lib/pstoedit\
		   debian/tmp/DEBIAN\
		   debian/tmp/usr/bin\
		   debian/tmp/usr/man/man1\
		   debian/tmp/usr/doc/$(package)/examples
	make  -C src $(MAKEOPTS) install
	strip debian/tmp/usr/bin/pstoedit
	install -m 0644 debian/copyright debian/tmp/usr/doc/$(package)/copyright
	install -m 0644 debian/changelog debian/tmp/usr/doc/$(package)/changelog.Debian
	install -m 0644 readme.txt debian/tmp/usr/doc/$(package)/readme.txt
	install -m 0644 news.txt debian/tmp/usr/doc/$(package)/changelog
	install -m 0644 examples/*.ps debian/tmp/usr/doc/$(package)/examples
	rm -f debian/tmp/usr/doc/$(package)/examples/*.man.ps*
	-gzip -v9 debian/tmp/usr/doc/$(package)/*.* debian/tmp/usr/doc/$(package)/changelog
	-gzip -v9 debian/tmp/usr/man/man1/*
	chmod 644 debian/tmp/usr/man/man1/*
	dpkg-shlibdeps src/pstoedit
	dpkg-gencontrol
	chown -R root.root debian/tmp
	chmod -R g-ws debian/tmp
	dpkg --build debian/tmp ..

define checkdir
	test -f src/$(package).cpp
endef

# Below here is fairly generic really

binary:         binary-indep binary-arch

source diff:
	@echo >&2 'source and diff are obsolete - use dpkg-source -b'; false

checkroot:
	$(checkdir)
	test root = "`whoami`"

.PHONY: binary binary-arch binary-indep clean checkroot
