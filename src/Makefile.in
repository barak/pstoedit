CCC=@CXX@ @SPECIAL_CXXFLAGS@
LDLIBS=$(LOCALLIBS) @LDLIBS@ -lm @LDL@
LINK=@LINK@
CCFLAGS=-DDEFAULTGS=$(GS) $(CXXFLAGS) -DPSTOEDITDATADIR="\"$(DESTDIR)$(datadir)\""

